<!-- views/index.ejs: For displaying all blog posts. -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Blog Application</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header>
      <h1>Welcome to All About That Blog!!!</h1>

      <img src="https://images.pexels.com/photos/3601081/pexels-photo-3601081.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1" alt="Blog Image">
    </header>
    



    <!-- Search Form -->
    <section id="search">
      <h2>Search Blog Posts</h2>
      <form action="/search" method="GET">
        <input type="text" name="query" placeholder="Search using keywords...">
        <button type="submit">Search</button>
      </form>
      
    </section>

 <!-- Latest Posts -->
<section id="posts">
  <h2>Latest Posts</h2>
  <% posts.forEach(post => { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content.substring(0, 100) %>...</p>
      <p><strong>Author:</strong> <%= post.author %></p>
      <p><a href="/posts/<%= post._id %>">Read more</a></p>
      <p>
        <a href="/posts/<%= post._id %>/edit" class="edit-button">Edit</a> |
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="delete-button">Delete</button>
        </form>
      </p>
    </div>
  <% }); %>
</section>



    <!-- Create New Post Form -->
    <section id="create-post">
      <h2>Create New Post</h2>
      <form action="/posts" method="POST">
        <input type="text" name="title" class="form-control" placeholder="Post Title" required>
        <textarea name="content" class="form-control" placeholder="Post Content" required></textarea>
        <input type="text" name="author" class="form-control" placeholder="Author" required>
        <button type="submit">Create Post</button>
      </form>
    </section>

    <footer>
      <p>&copy; 2024 My All About That Blog Application. All rights reserved.</p>
    </footer>
  </div>
</body>
</html>
