<!-- search.ejs -->

<h2>Search Results</h2>

<% if (results.length > 0) { %>
  <ul>
    <% results.forEach(post => { %>
      <li>
        <h3><%= post.title %></h3>
        <p><%= post.content.substring(0, 100) %>...</p>
        <p><a href="/posts/<%= post._id %>">Read more</a></p>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p>No results found.</p>
<% } %>

<p><a href="/">Back to Home</a></p>
